{% if ansible_distribution == 'Debian' %}
{% if ansible_distribution_major_version == '12' %}
{% set release = "bookworm" %}
{% elif ansible_distribution_major_version == '11' %}
{% set release = "bullseye" %}
{% elif ansible_distribution_major_version == '10' %}
{% set release = "buster" %}
{% endif %}
deb http://repo.mysql.com/apt/debian/ {{ release }} mysql-8.0
deb http://repo.mysql.com/apt/debian/ {{ release }} mysql-tools
{% endif %}
{% if ansible_distribution == 'Ubuntu' %}
{% if ansible_distribution_major_version == '24' %}
{% set release = "noble" %}
{% elif ansible_distribution_major_version == '22' %}
{% set release = "jammy" %}
{% elif ansible_distribution_major_version == '20' %}
{% set release = "focal" %}
{% elif ansible_distribution_major_version == '18' %}
{% set release = "bionic" %}
{% endif %}
deb http://repo.mysql.com/apt/ubuntu/dists/ {{ release }} mysql-8.0
deb http://repo.mysql.com/apt/ubuntu/dists/ {{ release }} mysql-tools
{% endif %}
